                            FontSize="14"
                            IsVisible="{Binding ReportInfoModel.UpdatingReport}"
                            Text="UPDATE REPORT"
                            TextColor="White" />
                    </Frame>
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        IsVisible="{Binding ReportInfoModel.DeletingReport}"
                        Text="PLEASE ENTER THE IDENTIFIER OF THE REPORT YOU WOULD LIKE TO DELETE:"
                        TextColor="White" />

                    <Label
                        FontAttributes="Bold,Italic"
                        FontSize="15"
                        HorizontalTextAlignment="Center"
                        IsVisible="{Binding ReportInfoModel.DeletingReport}"
                        Text="--THIS ACTION CANNOT BE REVERSED--"
                        TextColor="red" />


                    <Entry
                        FontAttributes="Bold"
                        FontSize="20"
                        IsVisible="{Binding ReportInfoModel.DeletingReport}"
                        Placeholder="ENTER IDENTIFIER TO DELETE HERE:"
                        PlaceholderColor="LightGray"
                        Text="{Binding ReportInfoModel.Identifier}"
                        TextColor="Black" />


                    <Button
                        BackgroundColor="Red"
                        Command="{Binding DeleteSqlCommand}"
                        CornerRadius="40"
                        FontAttributes="Bold"
                        FontSize="14"
                        IsVisible="{Binding ReportInfoModel.DeletingReport}"
                        Text="DELETE REPORT"
                        TextColor="White" />

                    <!--  READING FROM ASSIGNED CASES INFO TABLE SQL  -->

                    <ListView
                        HasUnevenRows="True"
                        IsVisible="{Binding ReportInfoModel.ReadingSqlAssignedCases}"
                        ItemsSource="{Binding CaseInfoModel.AssignedCasesInfolList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Vertical">
                                        <Label
                                            FontSize="18"
                                            Text="ASSIGNED EMPLOYEE NAME:"
                                            TextColor="White" />
                                        <Label Text="{Binding AssignedEmployeeUsername}" TextColor="White" />

                                        <Label
                                            FontSize="18"
                                            Text="ASSIGNED CASE I.D.:"
                                            TextColor="White" />
                                        <Label Text="{Binding AssignedCaseId}" TextColor="White" />

                                        <Label
                                            FontSize="18"
                                            Text="ASSIGNED DATE:"
                                            TextColor="White" />
                                        <Label Text="{Binding AssignedDate}" TextColor="White" />

                                        <Label
                                            FontSize="18"
                                            Text="ASSIGNED TIME:"
                                            TextColor="White" />
                                        <Label Text="{Binding AssignedTime}" TextColor="White" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>